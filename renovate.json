{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":preserveSemverRanges"
  ],
  "schedule": ["after 8pm on sunday"],
  "prHourlyLimit": 2,
  "timezone": "America/New_York",
  "rangeStrategy": "bump",
  "packageRules": [
    { "matchUpdateTypes": ["minor", "patch"], "automerge": true },
    { "matchManagers": ["npm"], "labels": ["deps"] }
  ]
}
